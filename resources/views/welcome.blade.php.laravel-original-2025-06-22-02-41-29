    <script>
        async function showConfirmDialog() {
            const confirmed = await BalKit.confirm('Are you sure you want to test this?', 'Confirm Dialog Test');
            if (confirmed) {
                BalKit.toast('You clicked confirm!', 'info');
            } else {
                BalKit.toast('You clicked cancel!', 'warning');
            }
        }
    </script>
